@model Bel_Souvenirs.ViewModels.AdminIndexViewModel
@{
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Имя</th>
                <th>Email</th>
                <th>Роль</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        <!-- Кнопки для редактирования и удаления -->
                        <button class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editModal" data-id="@user.Id" data-email="@user.Email">Редактировать</button>
                        <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteModal" data-id="@user.Id">Удалить</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Модальное окно для редактирования пользователя -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Редактировать пользователя</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Закрыть">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" action="/Admin/EditUser">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="fullName">Имя пользователя</label>
                        <input type="text" class="form-control" id="fullName" name="fullName" />
                    </div>
                    <div class="form-group">
                        <label for="userEmail">Email</label>
                        <input type="email" class="form-control" id="userEmail" name="userEmail" />
                    </div>
                    <div class="form-group">
                        <label for="userRole">Роль</label>
                        <select class="form-control" id="userRole" name="userRole">
                            <option value="Admin">Администратор</option>
                            <option value="User">Пользователь</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" id="userId" name="userId" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Модальное окно для подтверждения удаления пользователя -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Удалить пользователя</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Закрыть">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" action="/Admin/DeleteUser">
                <div class="modal-body">
                    <p>Вы уверены, что хотите удалить этого пользователя?</p>
                </div>
                <div class="modal-footer">
                    <input type="hidden" id="deleteUserId" name="userId" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                    <button type="submit" class="btn btn-danger">Удалить</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Инициализация данных в модальных окнах
        $('#editModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var userId = button.data('id');
            var userName = button.data('name');
            var userEmail = button.data('email');

            var modal = $(this);
            modal.find('#userId').val(userId);
            modal.find('#userName').val(userName);
            modal.find('#userEmail').val(userEmail);
        });

        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var userId = button.data('id');

            var modal = $(this);
            modal.find('#deleteUserId').val(userId);
        });
    </script>
}
