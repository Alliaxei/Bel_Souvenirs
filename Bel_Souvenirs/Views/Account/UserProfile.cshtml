@model ApplicationUser

@{
    ViewData["Title"] = "Профиль пользователя";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card-account">
                <div class="card-header bg-success text-white">
                    <h3>Мой профиль</h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }
                    
                    <form asp-action="Profile" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <p class="form-control-plaintext">@Model.Email</p>

                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="FullName" class="form-label">Полное имя</label>
                            <input asp-for="FullName" class="form-control"/>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PasswordHash" class="form-label">Пароль</label>
                            <input type="password" asp-for="PasswordHash" class="form-control"/>
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>

                        <div class=""></div>
                        <button type="submit" class="btn btn-success">Сохранить изменения</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}