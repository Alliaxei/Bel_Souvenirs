@using Microsoft.AspNetCore.Identity
@using Bel_Souvenirs.Models
@using Microsoft.AspNetCore.Mvc.Rendering

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Админ панель</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    @await RenderSectionAsync("Styles", required: false)  
</head>
<body class="d-flex flex-column min-vh-100">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Admin")">Админ панель</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Admin")">Главная</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ManageUsers", "Admin")">Управление пользователями</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ManageProducts", "Admin")">Управление товарами</a>
                    </li>
                </ul>
            </div>
        </div>
            
        <div class="d-flex justify-content-end">
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-link p-0">
                        <i class="bi bi-box-arrow-right text-white me-5" style="font-size: 1.5rem;"></i>
                    </button>
                </form>
            }
        </div>
    </nav>


    <div class="container mt-3 flex-grow-1">
        @RenderBody()  
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false) 
</body>
</html>
