@model Bel_Souvenirs.ViewModels.AdminIndexViewModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Управление пользователями";
}

<div class="container mt-4">
    <h2>Управление пользователями</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addUserModal">
            <i class="bi bi-plus-circle me-1"></i> Добавить пользователя
        </button>
    </div>

    <table class="table table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Имя</th>
                <th>Email</th>
                <th>Роль</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td style="width: 180px;">
                        <!-- Кнопки для редактирования и удаления -->
                        <button class="btn btn-sm btn-primary me-2" data-bs-toggle="modal" data-bs-target="#editUserModal-@user.Id">
                            <i class="bi bi-pencil-square"></i>
                        </button>
                        <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('Удалить этого пользователя?');">
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Модальное окно: Добавление пользователя -->
<div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-action="AddUser" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="addUserModalLabel">Добавить пользователя</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="FullName">Имя пользователя</label>
                        <input type="text" class="form-control" id="FullName" name="FullName" required />
                    </div>
                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input type="email" class="form-control" id="Email" name="Email" required />
                    </div>
                    <div class="form-group">
                        <label for="Role">Роль</label>
                        <select class="form-control" id="Role" name="Role" required>
                            <option value="Admin">Администратор</option>
                            <option value="User">Пользователь</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Сохранить</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Модальные окна: Редактирование пользователя -->
@foreach (var user in Model.Users)
{
    <div class="modal fade" id="editUserModal-@user.Id" tabindex="-1" aria-labelledby="editUserModalLabel-@user.Id" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <form asp-action="EditUser" method="post">
                    <input type="hidden" name="Id" value="@user.Id" />
                    <div class="modal-header">
                        <h5 class="modal-title" id="editUserModalLabel-@user.Id">Редактировать пользователя</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="FullName">Имя пользователя</label>
                            <input type="text" class="form-control" id="FullName" name="FullName" value="@user.FullName" required />
                        </div>
                        <div class="form-group">
                            <label for="Email">Email</label>
                            <input type="email" class="form-control" id="Email" name="Email" value="@user.Email" required />
                        </div>
                      
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Сохранить изменения</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Инициализация данных в модальных окнах
        $('#editUserModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var userId = button.data('id');
            var userFullName = button.data('name');
            var userEmail = button.data('email');
            var userRole = button.data('role');

            var modal = $(this);
            modal.find('#Id').val(userId);
            modal.find('#FullName').val(userFullName);
            modal.find('#Email').val(userEmail);
            modal.find('#Role').val(userRole);
        });
    </script>
}
